<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
	</style>

	<!--fullscreen theme-->
	<style name="FullscreenUltimate" parent="@style/AppTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="NavigationMapRoute">
		<!-- Colors -->
		<item name="routeColor">@color/colorBlue</item>
		<item name="routeModerateCongestionColor">@color/colorYellow</item>
		<item name="routeSevereCongestionColor">@color/colorPink</item>
		<item name="routeShieldColor">@color/colorWhite</item>
		<!-- Scales -->
		<item name="routeScale">1.0</item>
	</style>

	<!--Style for Splash Screen-->
	<style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowBackground">@drawable/splash_screen_background</item>
	</style>

</resources>
