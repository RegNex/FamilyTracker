<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/layoutWidgetMain"
	android:background="@color/colorPrimary"
	android:orientation="vertical"
	android:padding="@dimen/widget_margin">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_45"
		android:background="@color/colorPrimaryDark">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignStart="@id/btnWidgetAdd"
			android:layout_alignParentStart="true"
			android:layout_margin="@dimen/dp_8"
			android:text="@string/app_name"
			android:textColor="#ffffff"
			android:textSize="24sp"
			android:textStyle="bold" />

		<ImageButton
			android:id="@+id/btnWidgetAdd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_margin="@dimen/dp_8"
			android:background="@android:color/transparent"
			android:contentDescription="@string/avatar"
			android:tint="@color/colorWhite"
			app:srcCompat="@drawable/ic_person_add" />
	</RelativeLayout>

	<TextView
		android:id="@+id/desc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginBottom="@dimen/dp_8"
		android:textColor="@color/colorWhite"
		tools:text="In case of Emergency, Call..." />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/dp_8"
		android:orientation="vertical">

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/imgWidgetPic"
			android:layout_width="@dimen/dp_72"
			android:layout_height="@dimen/dp_72"
			android:layout_gravity="center"
			app:civ_border_color="@color/colorWhite"
			app:civ_border_width="@dimen/dp_1"
			app:srcCompat="@drawable/ic_person_thick" />

		<TextView
			android:id="@+id/txtWidgetName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textColor="@color/colorWhite"
			tools:text="@string/text_placeholder" />

	</LinearLayout>

	<TextView
		android:id="@+id/txtNoData"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:text="@string/no_data"
		android:textColor="@color/colorWhite"
		android:textSize="36sp"
		android:textStyle="bold" />
</LinearLayout>