<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/fragDisplayMain"
	android:orientation="vertical"
	tools:context=".fragments.ProfileDisplayFragment">

	<LinearLayout
		android:id="@+id/displayLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/dp_24"
		android:layout_marginTop="@dimen/dp_24"
		android:layout_marginEnd="@dimen/dp_24"
		android:layout_marginBottom="@dimen/dp_72"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageButton
				android:id="@+id/btnHealth"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:contentDescription="@string/avatar"
				app:srcCompat="@drawable/ic_hospital" />

			<ImageButton
				android:id="@+id/btnEdit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:background="@android:color/transparent"
				android:contentDescription="@string/avatar"
				app:srcCompat="@drawable/ic_edit" />
		</RelativeLayout>

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/imgUserProfile"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="15dp"
			android:gravity="center_horizontal"
			app:srcCompat="@drawable/ic_person"
			app:civ_border_color="#FF000000"
			app:civ_border_width="2dp" />


		<TextView
			android:id="@+id/txtUserName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="20dp"
			android:drawableStart="@drawable/ic_person_thick"
			android:drawablePadding="8dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="18sp"
			tools:text="@string/text_placeholder" />

		<TextView
			android:id="@+id/txtUserGender"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="15dp"
			android:drawableStart="@drawable/ic_gender"
			android:drawablePadding="8dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="18sp"
			tools:text="@string/text_placeholder" />

		<TextView
			android:id="@+id/txtUserDob"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="15dp"
			android:drawableStart="@drawable/ic_date"
			android:drawablePadding="8dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="18sp"
			tools:text="@string/text_placeholder" />

		<TextView
			android:id="@+id/txtUserHomeAddress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="15dp"
			android:drawableStart="@drawable/ic_home"
			android:drawablePadding="8dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="18sp"
			tools:text="@string/text_placeholder" />

		<TextView
			android:id="@+id/txtUserWorkAddress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="15dp"
			android:drawableStart="@drawable/ic_work"
			android:drawablePadding="8dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="18sp"
			tools:text="@string/text_placeholder" />


		<TextView
			android:id="@+id/txtUserMobileNumber"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="15dp"
			android:drawableStart="@drawable/ic_phone"
			android:drawablePadding="8dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textSize="18sp"
			tools:text="@string/text_placeholder" />

		<Button
			android:id="@+id/btnLogout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dp_30"
			android:layout_marginBottom="@dimen/dp_72"
			android:background="@color/colorPrimary"
			android:text="@string/logout"
			android:textColor="@color/colorWhite" />

	</LinearLayout>


</ScrollView>