<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="co.etornam.familytracker">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />

	<application
		android:name=".FamilyTracker"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme"
		tools:ignore="GoogleAppIndexingWarning">

		<activity
			android:name=".ui.SettingsActivity"
			android:label="@string/settings"
			android:parentActivityName=".ui.MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ui.MainActivity" />
		</activity>

		<activity
			android:name=".ui.SplashActivity"
			android:theme="@style/FullscreenUltimate">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.HealthActivity"
			android:label="@string/health"
			android:parentActivityName=".ui.MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ui.MainActivity" />
		</activity>

		<activity
			android:name=".ui.ContactActivity"
			android:label="@string/select_contacts"
			android:parentActivityName=".ui.MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ui.MainActivity" />
		</activity>

		<activity
			android:name=".ui.ProfileActivity"
			android:label="@string/profile"
			android:parentActivityName=".ui.MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ui.MainActivity" />
		</activity>

		<activity
			android:name=".security.SignUpActivity"
			android:theme="@style/FullscreenUltimate" />
		<activity
			android:name=".ui.MainActivity"
			android:launchMode="singleTop"
			android:label="@string/home">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<service android:name=".services.LocationFetcherService" />
	</application>

</manifest>